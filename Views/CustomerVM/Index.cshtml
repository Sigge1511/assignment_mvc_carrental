@using assignment_mvc_carrental.Models;
@model IEnumerable<CustomerViewModel>


@{
    ViewData["Title"] = "Index";
}
<br>
<h1>Manage customers</h1>

<p>
    <a class="links" asp-controller="ApplicationUserVM" asp-action="Create">Add new customer</a>             @* //Endast för admin? *@
</p>
<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>Name:</th>
            <th>Email:</th>
            <th>Phone number:</th>
            <th>Address:</th>
            <th>City:</th>
            <th>Manage:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.City</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

