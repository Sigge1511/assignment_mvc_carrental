@model assignment_mvc_carrental.Models.VehicleViewModel

@{
    ViewData["Title"] = "Delete";
}
<br>
<h1>Delete</h1>
<div>
    <hr />

    <h3>Are you sure you want to delete this vehicle?</h3>
    <br>
    @if (!string.IsNullOrEmpty(Model.ImageUrl1))
    {
        <img src="@Model.ImageUrl1" alt="Bild 1" style="max-width: 60%;" />
    }
    <br><br>
  
    <dl class="row">
        <dt class = "col-sm-2">
            Title:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Year:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
           Price per day:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
        <dt class = "col-sm-2">
            Availibility:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>    
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />  <br><br>
        <a class="links" asp-controller="VehicleVM" asp-action="Edit" asp-route-id="@Model.Id">Edit vehicle instead</a> |
        <a class="links" asp-action="Index">Back to all vehicles</a> |
        <a class="links" asp-controller="Home" asp-action="Index">Back to homepage</a>
    </form>


</div>
