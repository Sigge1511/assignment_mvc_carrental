@model assignment_mvc_carrental.Models.VehicleViewModel

@{
    ViewData["Title"] = "Details";
}
<br>
<h1>@Model.Title</h1>

<div>
    <hr />
    @if (!string.IsNullOrEmpty(Model.ImageUrl1))
    {
        <img src="@Model.ImageUrl1" alt="Bild 1" style="max-width: 60%;" />
    }
    <br><br>
    @if (!string.IsNullOrEmpty(Model.ImageUrl2))
    {
        <img src="@Model.ImageUrl2" alt="Bild 2" style="max-width: 60%;" />
    }
    <br><br>

    <a asp-controller="BookingVM" asp-action="Create" asp-route-vehicleId="@Model.Id" class="btn btn-primary">
        Rent this vehicle</a>
    <br><br>


    <dl class="row">
        <dt class = "col-sm-2">
            Title:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Year built:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Price per day:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerDay)
        </dd>
        <dt class = "col-sm-2">
            Availability:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a class="links" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |       @*      Endast för admin??   *@
    <a class="links" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a> |         @*    Endast för admin??  *@
    <a class="links" asp-action="Index">Back to List</a>
</div>
